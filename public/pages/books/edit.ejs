<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head',{title: "Edit Book | NextBook"})%>
  <body>
    <%- include('../includes/header')%>

    <main>
      <h2>Edit a Book</h2>
      <form action="/books/<%= book.genre %>" method="post">
        <label for="name">Name: </label>
        <input
          type="text"
          value="<%= book.name%>"
          name="name"
          placeholder="Name"
        /><br />
        <label for="author">Author:</label>
        <input
          type="text"
          value="<%= book.author%>"
          name="author"
          placeholder="Author"
        /><br />
        <label for="pages">No. Pages: </label>
        <input
          type="text"
          value="<%= book.pages%>"
          name="pages"
          placeholder="Pages"
        /><br />
        <label for="review">Review:</label>
        <textarea
          name="review"
          value="<%= book.review%>"
          id=""
          placeholder="Your review"
          cols="30"
          rows="10"
        ></textarea>
        <br />
        <label for="genre">Genre:</label>
        <input
          type="text"
          value="<%= book.genre%>"
          name="genre"
          placeholder="Genre"
        /><br />
        <label for="rating">Rating: </label>
        <input
          type="text"
          value="<%= book.rating%>"
          name="rating"
          placeholder="Rating"
        /><br />

        <button>Save</button>
      </form>
    </main>
  </body>
</html>
